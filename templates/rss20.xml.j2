<?xml version="1.0"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
<channel>
	<title>{{ site_name }}</title>
	<link>{{ site_url }}</link>
	<language>en</language>
	<description>{{ site_name }} - {{ site_url }}</description>
	<atom:link rel="self" href="{{ site_url }}rss20.xml" type="application/rss+xml"/>

{% for post in posts %}
<item>
	<title>{{ post.author}}: {{ post.title }}</title>
	<guid isPermaLink="false">tag:{{ post.blog_url }},{{ post.published_date | date('%Y-%m-%d') }}:{{ post.url }}</guid>
	<link>{{ post.url }}</link>
	<description>{{ post.post | escape }}</description>
	<pubDate>{{ post.published_date | date('%a, %d %b %Y %T +0000') }}</pubDate>
</item>
{% endfor %}
</channel>
</rss>
